<Page
    x:Class="DigitalWellbeingWinUI3.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigitalWellbeingWinUI3.Views"
    xmlns:vm="using:DigitalWellbeingWinUI3.ViewModels"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls Header -->
        <Border Grid.Row="0" Background="#1AFFFFFF" CornerRadius="12" BorderBrush="#30FFFFFF" BorderThickness="1" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="25">
                <StackPanel>
                    <TextBlock Text="Start Date" Foreground="#AAFFFFFF" FontSize="12" Margin="0,0,0,5"/>
                    <CalendarDatePicker Date="{Binding StartDate, Mode=TwoWay}" Width="150"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="End Date" Foreground="#AAFFFFFF" FontSize="12" Margin="0,0,0,5"/>
                    <CalendarDatePicker Date="{Binding EndDate, Mode=TwoWay}" Width="150"/>
                </StackPanel>
                
                <StackPanel VerticalAlignment="Bottom">
                    <Button Content="Generate Report" Command="{x:Bind ViewModel.GenerateChartCommand}" Width="140" Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Padding="0,0,0,5">
                    <ToggleSwitch Header="Group by Category" IsOn="{Binding IsTagView, Mode=TwoWay}" OnContent="Tags" OffContent="Apps"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Chart Area -->
        <Grid Grid.Row="1">
            <Border Background="#1AFFFFFF" CornerRadius="12" BorderBrush="#30FFFFFF" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Distribution Analysis" FontSize="18" FontWeight="SemiBold" Foreground="#FFFFFFFF" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    
                    <!-- INJECTED CHART CONTAINER -->
                    <ContentControl x:Name="HistoryChartContainer" Grid.Row="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinHeight="400"/>
                    
                    <!-- Loading Indicator -->
                    <ProgressRing Grid.Row="1" IsActive="{Binding IsLoading}" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
