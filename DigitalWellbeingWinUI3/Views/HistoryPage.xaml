<Page
    x:Class="DigitalWellbeingWinUI3.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigitalWellbeingWinUI3.Views"
    xmlns:vm="using:DigitalWellbeingWinUI3.ViewModels"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls Header -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                
                <!-- Time Period Dropdown -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Time Period" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <ComboBox ItemsSource="{Binding DateRangeOptions}" SelectedIndex="{Binding SelectedDateRangeIndex, Mode=TwoWay}" Width="130"/>
                </StackPanel>
                
                <!-- View Mode Dropdown -->
                <StackPanel Spacing="4">
                    <TextBlock Text="View Mode" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <ComboBox ItemsSource="{Binding ViewModeOptions}" SelectedIndex="{Binding SelectedViewModeIndex, Mode=TwoWay}" Width="120"/>
                </StackPanel>
                
                <!-- Custom Date Range Controls (visible only when Custom is selected) -->
                <StackPanel Orientation="Horizontal" Spacing="15" Visibility="{Binding IsCustomDateRange}">
                    
                    <!-- Separator -->
                    <Border Width="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="5,0"/>
                    
                    <!-- Start Date -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Start Date" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <CalendarDatePicker Date="{Binding StartDate, Mode=TwoWay}" Width="140"/>
                    </StackPanel>
                    
                    <!-- End Date -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="End Date" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <CalendarDatePicker Date="{Binding EndDate, Mode=TwoWay}" Width="140"/>
                    </StackPanel>
                    
                    <!-- Generate Button -->
                    <Button Content="Apply" Command="{x:Bind ViewModel.GenerateChartCommand}" Style="{StaticResource AccentButtonStyle}" VerticalAlignment="Bottom" Padding="20,6"/>
                </StackPanel>
                
            </StackPanel>
        </Border>

        <!-- Scrollable Content Area -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                
                <!-- KPI Summary Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Time Card -->
                    <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Total Screen Time" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding TotalHoursText, FallbackValue='00:00:00'}" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TotalChangeText, FallbackValue='Generating...'}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Trend Info Card -->
                    <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Daily Trends" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="ðŸ“Š Day-by-day usage" FontSize="18" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Text="Orange line = previous period average" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Trend Chart -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Usage Trends" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ContentControl x:Name="TrendChartContainer" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="250"/>
                    </StackPanel>
                </Border>
                
                <!-- Distribution Analysis -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Distribution Analysis" FontSize="18" FontWeight="SemiBold"/>
                        <ContentControl x:Name="HistoryChartContainer" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="350" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Activity Heatmap -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Activity Heatmap" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Hover for details" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" Margin="0,2,0,10"/>
                        <ContentControl x:Name="HeatMapContainer" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="280"/>
                    </StackPanel>
                </Border>
                
                <!-- Loading Indicator -->
                <ProgressRing IsActive="{Binding IsLoading}" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
