<Page
    x:Class="DigitalWellbeingWinUI3.Views.MiscDataPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigitalWellbeingWinUI3.Views"
    xmlns:vm="using:DigitalWellbeingWinUI3.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="using:WinUI3Localizer"
    xmlns:converters="using:DigitalWellbeingWinUI3.Converters"
    mc:Ignorable="d"
    Background="Transparent"
    SizeChanged="RootPage_SizeChanged">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid x:Name="HeaderGrid" Grid.Row="0" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="HeaderTitlePanel" Grid.Column="0">
                <TextBlock l:Uids.Uid="MiscData_Title" Style="{ThemeResource TitleTextBlockStyle}"/>
                <TextBlock l:Uids.Uid="MiscData_Subtitle"
                       Style="{ThemeResource SubtitleTextBlockStyle}" Opacity="0.7"/>
            </StackPanel>
            
            <!-- Date Selector (Dashboard Style) -->
            <StackPanel x:Name="HeaderDatePanel" Grid.Column="1" Orientation="Horizontal" Spacing="15" VerticalAlignment="Top" HorizontalAlignment="Right">
                
                <!-- Time Period Dropdown -->
                <StackPanel Spacing="4" VerticalAlignment="Center">
                     <TextBlock l:Uids.Uid="History_TimePeriod" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                     <ComboBox ItemsSource="{x:Bind ViewModel.DateRangeDisplayOptions, Mode=OneWay}" 
                               SelectedIndex="{x:Bind ViewModel.SelectedDateRangeIndex, Mode=TwoWay}" 
                               Width="140"/>
                </StackPanel>

                <!-- Custom Range (Visible if custom) -->
                <StackPanel Orientation="Horizontal" Spacing="10" Visibility="{Binding IsCustomDateRange, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- Start Date -->
                    <StackPanel Spacing="4">
                        <TextBlock l:Uids.Uid="History_StartDate" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <CalendarDatePicker Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" Width="140"/>
                    </StackPanel>
                    
                    <TextBlock Text="-" VerticalAlignment="Center" Margin="0,20,0,0" Opacity="0.5"/>
                    
                    <!-- End Date -->
                    <StackPanel Spacing="4">
                        <TextBlock l:Uids.Uid="History_EndDate" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <CalendarDatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" Width="140"/>
                    </StackPanel>
                    
                    <!-- Go Button -->
                    <Button Content="&#xE721;" FontFamily="Segoe MDL2 Assets" 
                            Command="{x:Bind ViewModel.RefreshCommand}" 
                            Style="{StaticResource AccentButtonStyle}" 
                            VerticalAlignment="Bottom" Height="32" Width="36" Padding="0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Stats Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{x:Bind ViewModel.Stats, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VariableSizedWrapGrid Orientation="Horizontal" ItemWidth="{Binding ResponsiveItemWidth, ElementName=RootPage, Mode=OneWay}" ItemHeight="160" MaximumRowsOrColumns="6"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:StatItem">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16" Margin="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Icon -->
                                <FontIcon Grid.Row="0" Glyph="{x:Bind Icon}" FontSize="18" 
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" 
                                          HorizontalAlignment="Left" Margin="0,0,0,4"/>

                                <!-- Value -->
                                <TextBlock Grid.Row="1" Text="{x:Bind Value}" 
                                           Style="{ThemeResource SubtitleTextBlockStyle}" 
                                           FontWeight="SemiBold"/>

                                <!-- Label + Description -->
                                <StackPanel Grid.Row="2" Margin="0,4,0,0">
                                    <TextBlock Text="{x:Bind Label}" 
                                               Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind Description}" 
                                               Style="{ThemeResource CaptionTextBlockStyle}" 
                                               Opacity="0.7" TextWrapping="Wrap" MaxLines="2"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
