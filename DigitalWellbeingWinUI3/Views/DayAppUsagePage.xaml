<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DigitalWellbeingWinUI3.Views.DayAppUsagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigitalWellbeingWinUI3.Views"
    xmlns:vm="using:DigitalWellbeingWinUI3.ViewModels"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Date Header -->
            <RowDefinition Height="Auto"/> <!-- Bar Chart -->
            <RowDefinition Height="*"/>    <!-- Detail Content -->
        </Grid.RowDefinitions>

        <!-- Date Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="&lt;" Command="{x:Null}" IsEnabled="{x:Bind ViewModel.CanGoPrev, Mode=OneWay}" Click="BtnPrev_Click"/>
            <TextBlock Text="{x:Bind ViewModel.StrLoadedDate, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" Margin="20,0,20,0" VerticalAlignment="Center"/>
            <Button Content="&gt;" Command="{x:Null}" IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}" Click="BtnNext_Click"/>
        </StackPanel>

            <!-- Weekly Bar Chart -->
        <Grid Grid.Row="1" Height="200" Margin="0,0,0,20">
             <!-- Background to ensure visibility -->
            <lvc:CartesianChart x:Name="WeeklyChart" 
                                DataPointerDownCommand="{x:Bind ViewModel.ChartClickCommand, Mode=OneWay}"/>
        </Grid>

        <!-- Details -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- List -->
            <ListView Grid.Column="0" ItemsSource="{x:Bind ViewModel.DayListItems, Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5" RightTapped="Grid_RightTapped">
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Set Time Limit" Click="MenuFlyoutItem_SetTimeLimit_Click" Tag="{Binding ProcessName}"/>
                                    <MenuFlyoutItem Text="Set App Tag" Click="MenuFlyoutItem_SetAppTag_Click" Tag="{Binding ProcessName}"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="Exclude App" Click="MenuFlyoutItem_ExcludeApp_Click" Tag="{Binding ProcessName}" Icon="Delete"/>
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding IconSource}" Width="32" Height="32" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProcessName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding StrAppTag}" Foreground="{Binding BrushAppTag}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding StrDuration}" HorizontalAlignment="Right"/>
                                <ProgressBar Value="{Binding Percentage}" Maximum="100" Width="100" Height="4"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Pie Chart -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="{x:Bind ViewModel.StrTotalDuration, Mode=OneWay}" 
                           Grid.Row="0"
                           HorizontalAlignment="Center" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,10"/>

                <lvc:PieChart x:Name="DayPieChart" LegendPosition="Right" Grid.Row="1" />
                
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                              Grid.RowSpan="2"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Width="50" Height="50"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
